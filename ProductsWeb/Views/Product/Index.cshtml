@model IEnumerable<ProductsWeb.Models.Product>

<div class="container mt-4">
    <h2>Lista de Productos</h2>
    
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Categor√≠a</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model ?? Enumerable.Empty<ProductsWeb.Models.Product>())
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Category</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>